<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">


    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/bottom_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawablePadding="@dimen/dp_3"
            android:drawableTop="@drawable/selector_a"
            android:gravity="center"
            android:text="主页"
            android:textSize="10sp"/>

        <RadioButton
            android:id="@+id/bottom_video"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="@dimen/dp_3"
            android:drawableTop="@drawable/selector_b"
            android:gravity="center"
            android:text="视频"
            android:textSize="10sp"/>

        <RadioButton
            android:id="@+id/bottom_pic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="@dimen/dp_3"
            android:drawableTop="@drawable/selector_c"
            android:gravity="center"
            android:text="图片"
            android:textSize="10sp"/>


        <RadioButton
            android:id="@+id/bottom_jia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="false"
            android:drawablePadding="@dimen/dp_3"
            android:drawableTop="@drawable/selector_d"
            android:gravity="center"
            android:text="家联本"
            android:textSize="10sp"/>

        <RadioButton
            android:id="@+id/bottom_msg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="false"
            android:drawablePadding="@dimen/dp_3"
            android:drawableTop="@drawable/selector_e"
            android:gravity="center"
            android:text="消息"
            android:textSize="10sp"/>
    </RadioGroup>

</LinearLayout>
